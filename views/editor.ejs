<!DOCTYPE html>
<html>
<head>

    <title>Docstre DMS - Editor</title>

    <link rel="stylesheet" type="text/css" href="stylesheets/editor.css" />

</head>
<body>

	<div id="documentEditor"></div>

	<script type="text/javascript" src="<%= apiUrl %>"></script>

	<script type="text/javascript" language="javascript">

		var loadEditor = function() {
			new DocsAPI.DocEditor("documentEditor", 
				{
					type : "<%= editor.type %>",
					width : "100%",
					height : "100%",
					documentType : "<%= editor.documentType %>",
					document : {
						title : "<%= file.title %>",
						url : "<%= file.uri %>", 
						fileType : "<%= file.ext %>",
						key : "<%= editor.key %>",
						info: {
                            author: "Docstre",
                            created: new Date().toDateString()
                        },
						permissions : {
							edit : true,
							download : true
						}

					},
					editorConfig : {
						mode : "edit",
                        lang: "<%= editor.lang %>",
                        callbackUrl: "<%= editor.callbackUrl %>",
                        user: {
                            id: "<%= editor.userid %>",
                            firstname: "<%= editor.firstname %>",
                            lastname: "<%= editor.lastname %>"
                        },
                        customization: {
                            about: true,
                            comments: true,
                            feedback: true,
                            goback: {
                                url: "<%= editor.getServerUrl %>"
                            }
                        },
					}

				});
		};

//https://dl.dropboxusercontent.com/u/9346746/demo.docx",
//callbackUrl: "<%- editor.callbackUrl %>",

		loadEditor();

	</script>

</body>
</html>
