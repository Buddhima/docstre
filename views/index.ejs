<!DOCTYPE html>
<html ng-app="docstreBrowser">
<head>

    <title>Docstre DMS</title>

    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">


    <script src="/javascripts/jquery.min.js" type="text/javascript"></script>
    <script src="/javascripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="/javascripts/angular.min.js" type="text/javascript"></script>

    <script src="/javascripts/docstre-core.js" type="text/javascript"></script>

</head>
<body ng-controller="mainController">

    <div class="jumbotron text-center">
        <h1>
         <span class="label label-info">{{ folders.length }}</span> Folders &amp;
         <span class="label label-info">{{ files.length }}</span> Files
        </h1>
    </div>

    <div id="entry-list" class="list-group">
        <div class="col-sm-8 col-sm-offset-2">

            <input type="button" value="Back" ng-click='openFolder(previousLocation.relPath)'>

            <a class="list-group-item active">
                {{ currentLocation.relPath }}
            </a>

            <!-- LOOP OVER THE ENTRIES IN $scope.folders -->
            <a class="list-group-item" ng-repeat="folder in folders">
                    
                         {{ folder.title }}
    			<input type="button" value="open" ng-click='openFolder(folder.relPath)'>
    			<input type="button" value="delete" ng-click='deleteFolder(folder.relPath)'>
                    
            </a>

            <!-- LOOP OVER THE ENTRIES IN $scope.files -->
            <a class="list-group-item" ng-repeat="file in files">
                    
                         {{ file.title }}
                <input type="button" value="open" ng-click='openFile(file.relPath)'>
                <input type="button" value="delete" ng-click='deleteFile(file.relPath)'>
                    
            </a>

        </div>
    </div>


</body>
</html>
